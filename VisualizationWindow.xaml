<Window x:Class="_3d_repo.View.VisualizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hx="http://helix-toolkit.org/wpf"
        mc:Ignorable="d"
        Title="3D Visualization" Height="450" Width="800">
    <Grid>
        <hx:HelixViewport3D x:Name="helixViewport">
            <hx:HelixViewport3D.Camera>
                <PerspectiveCamera Position="2,2,2" LookDirection="-2,-2,-2" UpDirection="0,1,0" FieldOfView="45" />
            </hx:HelixViewport3D.Camera>
            <hx:SunLight />
            <hx:GridLinesVisual3D Width="10" Length="10" />
        </hx:HelixViewport3D>
    </Grid>
</Window>
