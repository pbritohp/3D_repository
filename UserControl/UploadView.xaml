<UserControl x:Class="_3d_repo.View.UploadView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">
    <Grid>
        <StackPanel>
            <Button Content="Select File" Click="SelectFileButton_Click" Margin="10"/>
            <TextBlock x:Name="filePathTextBlock" Margin="10"/>

            <TextBlock Text="Select Folder" Margin="10,10,10,0"/>
            <ComboBox x:Name="folderComboBox" Margin="10"/>

            <TextBlock Text="Or Create New Folder" Margin="10,10,10,0"/>
            <TextBox x:Name="newFolderTextBox" Margin="10"/>

            <Button Content="Upload" Click="UploadButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</UserControl>
